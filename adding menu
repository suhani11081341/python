from tkinter import *
root=Tk()
root.geometry("500x500")
menubar=Menu(root)
root.config(menu=menubar)
stock=Menu(menubar)
transaction=Menu(menubar)
quit=Menu(menubar)
report=Menu(menubar)
menubar.add_cascade(label="stock",menu=stock)
menubar.add_cascade(label="transaction",menu=transaction)
menubar.add_cascade(label="stock",menu=report)
menubar.add_cascade(label="transaction",menu=quit)
stock.add_command(label="add item")
stock.add_command(label="update")
transaction.add_command(label="issue")
transaction.add_command(label="receipt")
report.add_command(label="all item")
report.add_command(label="all issue")
report.add_command(label="all recipt")
report.add_command(label="single item")
quit.add_command(label="quit")
root.mainloop()
